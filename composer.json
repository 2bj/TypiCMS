{
	"name": "sdebacker/typicms",
	"description": "Simple multilingual CMS",
	"keywords": ["CMS", "multilingual", "laravel", "Typi"],
	"license": "MIT",
	"authors": [
		{
			"name": "Typi Design",
			"email": "info@typidesign.be"
		},
		{
			"name": "Samuel De Backer",
			"email": "info@typidesign.be",
			"role": "Developer"
		}
	],
	"require": {
		"laravel/framework": "4.1.*",
		"cartalyst/sentry": "2.1.*",
		"edvinaskrucas/notification": "1.*",
		"anahkiasen/former": "3.4.*",
		"ink/ink-translatable": "dev-master",
		"dimsav/laravel-translatable": "1.*",
		"bkwld/croppa": "3.*",
		"jwage/easy-csv": "dev-master",
		"thujohn/rss": "dev-master",
		"barryvdh/laravel-debugbar": "1.*",
		"mccool/database-backup": "1.0.0",
		"thomaswelton/laravel-gravatar": "dev-master",
		"eluceo/ical": "dev-master",
		"davejamesmiller/laravel-breadcrumbs": "~2.2.0"
	},
	"require-dev": {
		"raveren/kint": "dev-master",
		"mockery/mockery": "0.9.*@dev"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-0": {
			"TypiCMS": "app"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
